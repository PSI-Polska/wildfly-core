FROM maven:3.9-amazoncorretto-11

ENV NEXUS_ROOT=https://nexus.comdev.psi.de/repository
ENV DOCKER_COMPOSE_V1_VERSION=1.29.2
ENV DOCKER_COMPOSE_V2_VERSION=2.21.0
ENV DOCKER_ENGINE_VERSION=5:24.0.7
ENV CORRETTO_JDK_VERSION=8.362.08.1
ENV ADOPT_JDK_VERSION=11.0.24_8
ENV ADOPT_JDK_VERSION_ALT=11.0.24+8
ENV ADOPT_JDK17_VERSION=17.0.12_7
ENV ADOPT_JDK17_VERSION_ALT=17.0.12+7
ENV MAVEN_VERSION=3.9.7
ENV MAVEN_PROFILER_VERSION=3.2
ENV ASYNC_PROFILER_VERSION=1.8.8
ENV K8S_VERSION=v1.20.0
ENV HELM_VERSION=v3.13.1
ENV NODE_DEFAULT_LTS_VERSION=16.20.1
ENV NODE_18_LTS_VERSION=18.16.1
ENV FIREFOX_VERSION=114.0

RUN yum update -y && yum install -y hostname

RUN useradd -ms /bin/bash jenkins
USER jenkins
WORKDIR /home/jenkins